{% extends "layout.html.twig" %}

{% block title %}Home{% endblock %}

{% block content %}
	{% for article in articles %}
	<article style="text-align: center; margin-top: 50px;">
	    <h2><a class="articleTitle" href="/article/{{ article.id }}">{{ article.title }}</a></h2>
	    <a href="/article/{{ article.id }}"><img src="{{ article.preview }}" width=280 height=150></img></a>
	</article>
	{% endfor %}
{% endblock %}
